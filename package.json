{
  "name": "flashcards",
  "description": "Application for learning new words",
  "author": "Daniel Nakamashi <dnakamashi@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "test:ci": "yarn test --ci --bail",
    "lint": "concurrently -r yarn:lint:es yarn:lint:ts",
    "lint:fix": "yarn lint:es --fix && yarn lint:ts",
    "lint:es": "yarn eslint --ext ts --ext tsx packages/",
    "lint:ts:core": "yarn workspace @flashcards/core lint:ts",
    "lint:ts:application": "yarn workspace @flashcards/application lint:ts",
    "lint:ts:service": "yarn workspace @flashcards/service lint:ts",
    "lint:ts:presentation": "yarn workspace @flashcards/presentation lint:ts",
    "lint:ts:web": "yarn workspace @flashcards/web lint:ts",
    "lint:ts": "concurrently -r yarn:lint:ts:*",
    "start": "yarn workspace @flashcards/web start",
    "build:core": "yarn workspace @flashcards/core build",
    "build:application": "yarn workspace @flashcards/application build",
    "build:service": "yarn workspace @flashcards/service build",
    "build:presentation": "yarn workspace @flashcards/presentation build",
    "build:web": "yarn workspace @flashcards/web build",
    "build": "yarn clear && yarn build:core && yarn build:application && concurrently yarn:build:presentation yarn:build:service && yarn build:web",
    "clear:core": "yarn workspace @flashcards/core clear",
    "clear:application": "yarn workspace @flashcards/application clear",
    "clear:service": "yarn workspace @flashcards/service clear",
    "clear:presentation": "yarn workspace @flashcards/presentation clear",
    "clear:web": "yarn workspace @flashcards/web clear",
    "clear": "concurrently yarn:clear:*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.2",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@testing-library/jest-dom": "^5.11.1",
    "@types/dotenv-webpack": "^1.8.0",
    "@types/html-webpack-plugin": "^3.2.3",
    "@types/html-webpack-template": "^6.0.4",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.22",
    "@types/webpack-dev-server": "^3.11.0",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "@welldone-software/why-did-you-render": "^4.3.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^2.0.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest-dom": "^3.1.4",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react-refresh": "^0.8.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.0",
    "rollup-plugin-postcss": "^3.1.3",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^4.1.0",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "type-fest": "^0.16.0",
    "typescript": "^3.9.7",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.10.5"
  },
  "resolutions": {
    "minimist": "^1.2.2"
  }
}
