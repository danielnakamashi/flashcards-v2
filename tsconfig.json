{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": "./packages",
    "paths": {
      "@flashcards/application": ["application/src"],
      "@flashcards/application/*": ["application/src/*"],
      "@flashcards/core": ["core/src"],
      "@flashcards/core/*": ["core/src/*"],
      "@flashcards/presentation": ["presentation/src"],
      "@flashcards/presentation/*": ["presentation/src/*"],
      "@flashcards/service": ["service/src"],
      "@flashcards/service/*": ["service/src/*"],
      "@flashcards/web": ["web/src"],
      "@flashcards/web/*": ["web/src/*"]
    }
  },
  "include": ["./packages/**/src/*.ts*"]
}
